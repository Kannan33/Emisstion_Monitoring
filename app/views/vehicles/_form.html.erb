<%= form_with model: @vehicle do |f| %>

  <%= f.label :model_name, class: 'form-label' %>
  <%= f.text_field :model_name, class: 'form-control' %>

  <%= f.label :vehicle_number, class: 'form-label' %>
  <%= f.text_field :vehicle_number, class: 'form-control' %>

  <%= f.label :vehicle_type, class: 'form-label' %>
  <%= f.collection_select :vehicle_type, Vehicle::VEHICLE_TYPES %> <!-- Enum for vehicle type -->

  <%= f.submit 'Create', class: 'btn btn-primary' %>
<% end %>